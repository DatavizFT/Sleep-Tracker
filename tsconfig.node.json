{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": false,
    "outDir": "dist-electron",
    "declaration": true,
    "esModuleInterop": true
  },
  "include": ["src/main", "src/preload", "src/renderer/types", "vite.config.ts", "electron.vite.config.ts"]
}
